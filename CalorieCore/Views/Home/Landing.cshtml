@{
    ViewData["Title"] = "Welcome";
}
<div class="landing-page">
<div class="container mt-5 text-white">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-white">Track Your Calories</h1>
        <p class="lead mt-3 text-white">
            Log your meals, monitor your daily intake, and stay aware of your eating habits.
        </p>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a asp-controller="Account" asp-action="Register" class="btn btn-warning px-4">
                Register
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-light px-4">
                Login
            </a>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <h2 class="mb-3 text-white">What is this app?</h2>
            <p class="text-white">
                This calorie tracker helps you log the food you eat, calculate your daily calorie intake,
                and keep everything organized in one personal account.
            </p>
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h5 class="card-title">🍎 Log Food</h5>
                    <p class="card-text">
                        Add foods you eat and record their calorie values.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h5 class="card-title">📊 Daily Totals</h5>
                    <p class="card-text">
                        Automatically see your total calories for the day.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h5 class="card-title">📅 Track Progress</h5>
                    <p class="card-text">
                        Review past days and understand your eating habits.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h5 class="card-title">🔐 Personal Account</h5>
                    <p class="card-text">
                        Your data is stored securely and only visible to you.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <h2 class="text-center mb-4 text-white">How it works</h2>
            <ol class="list-group list-group-numbered">
                <li class="list-group-item bg-white text-dark">Create a free account</li>
                <li class="list-group-item bg-white text-dark">Log the foods you eat & activities</li>
                <li class="list-group-item bg-white text-dark">Track your daily calorie intake</li>
            </ol>
        </div>
    </div>

    <div class="text-center mb-5">
        <h3 class="mb-3 text-white">Ready to start tracking?</h3>
        <a asp-controller="Account" asp-action="Register" class="btn btn-warning px-4">
            Register
        </a>
    </div>

</div>
</div>

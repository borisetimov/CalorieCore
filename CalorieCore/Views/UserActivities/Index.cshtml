@model IEnumerable<CalorieCore.Models.UserActivity>


<div class="d-flex align-items-center mb-3">
    <h2 class="mb-0">Activities</h2>
    <img src="~/images/activities.png" alt="Activities" class="ms-2" style="height:40px; width:40px;">
</div>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add Activity</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Calories Burned</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CaloriesBurned</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

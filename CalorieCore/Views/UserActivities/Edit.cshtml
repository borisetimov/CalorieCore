@model CalorieCore.Models.UserActivity

<h2>Edit Activity</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CaloriesBurned"></label>
        <input asp-for="CaloriesBurned" class="form-control" />
        <span asp-validation-for="CaloriesBurned" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="Index" class="btn btn-danger mt-2">Cancel</a>
</form>

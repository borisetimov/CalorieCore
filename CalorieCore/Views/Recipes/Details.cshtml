@model CalorieTrackerApp.Models.Recipe

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <h2>@Model.Title</h2>

            @if (!string.IsNullOrEmpty(Model.Img))
            {
                <img src="@Model.Img" class="img-fluid mb-3" alt="@Model.Title">
            }

            <p><strong>Calories:</strong> @Model.Calories</p>
            <p><strong>Type:</strong> @Model.Type</p>

            <p>
                <strong>Tags:</strong>
                @foreach (var tag in Model.Tags.Split(',').Select(t => t.Trim()))
                {
                    <span class="badge bg-info me-1">@tag</span>
                }
            </p>

            <hr />

            <h5>Ingredients</h5>
            <p>@Model.Ingredients</p>

            <h5>Instructions</h5>
            <p>@Model.Instructions</p>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit</a>
                <a asp-action="Index" class="btn btn-outline-dark">Back to Recipes</a>
            </div>
        </div>
    </div>
</div>

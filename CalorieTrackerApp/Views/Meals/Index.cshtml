@model IEnumerable<Meal>

<div class="container mt-4">
    <h2>🍽 Meals</h2>

    <a asp-action="Create" class="btn btn-dark mb-3">
        Log Meal
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Meal</th>
                <th>Calories</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meal in Model)
            {
                <tr>
                    <td>@meal.Name</td>
                    <td>@meal.Calories kcal</td>
                    <td>@meal.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

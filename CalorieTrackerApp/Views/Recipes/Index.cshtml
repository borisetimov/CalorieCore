@model IEnumerable<CalorieTrackerApp.Models.Recipe>

<div class="container mt-4">

    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">Recipes</h2>
        <img src="~/images/Food.png" alt="Recipes" class="ms-2" style="height:40px; width:40px;">
    </div>
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-2">

        <a asp-action="Create" class="btn btn-dark">
            Add Recipe
        </a>
        <select id="typeFilter" class="form-control" style="max-width: 160px;">
            <option value="">All Types</option>
            @foreach (var type in Model.Select(r => r.Type).Distinct())
            {
                <option value="@type">@type</option>
            }
        </select>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["CaloriesSort"]"
           class="btn btn-outline-secondary">
            Sort by Calories
        </a>

        <input type="text"
               id="recipeSearch"
               class="form-control"
               placeholder="Search recipes..."
               style="max-width: 220px;" />
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 recipe-card" data-type="@item.Type" data-tags="@item.Tags.ToLower()">
                <div class="card h-100 shadow-sm">

                    @if (!string.IsNullOrEmpty(item.Img))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.Img" class="card-img-top recipe-card-img" alt="@item.Title">
                        </a>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                @item.Title
                            </a>
                        </h5>

                        <p class="mb-2"><strong>Calories:</strong> @item.Calories</p>
                        <p class="mb-3">
                            @if (item.Calories <= 400)
                            {
                                <span class="badge bg-success">Low-calorie</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">High-calorie</span>
                            }

                            <span class="badge bg-info">@item.Difficulty</span>

                            @if (item.IsFavorite)
                            {
                                <span class="badge bg-warning">❤️ Favorite</span>
                            }
                        </p>


                        <div class="mt-auto d-flex flex-wrap gap-2">

                            <a asp-controller="Meals"
                               asp-action="AddFromRecipe"
                               asp-route-recipeId="@item.Id"
                               class="btn btn-outline-success btn-sm">
                                Cook & Log Meal 🍽
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm">
                                Delete
                            </a>

                        </div>

                    </div>

                </div>
            </div>
        }
    </div>

    @section Scripts {
        <script>
            const searchInput = document.getElementById("recipeSearch");
            const typeFilter = document.getElementById("typeFilter");
            const cards = document.querySelectorAll(".recipe-card");

            function filterRecipes() {
                const searchValue = searchInput.value.toLowerCase();
                const typeValue = typeFilter.value.toLowerCase();

                cards.forEach(card => {
                    const title = card.querySelector(".card-title").innerText.toLowerCase();
                    const cardType = card.dataset.type.toLowerCase();

                    const matchesSearch = title.includes(searchValue);
                    const matchesType = !typeValue || cardType === typeValue;

                    card.style.display = (matchesSearch && matchesType) ? "" : "none";
                });
            }

            searchInput.addEventListener("keyup", filterRecipes);
            typeFilter.addEventListener("change", filterRecipes);
        </script>
    }
</div>

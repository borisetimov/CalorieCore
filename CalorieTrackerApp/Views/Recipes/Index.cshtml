@model IEnumerable<CalorieTrackerApp.Models.Recipe>

<div class="d-flex align-items-center mb-3">
    <h2 class="mb-0">Recipies</h2>
    <img src="~/images/Food.png" alt="Recipies" class="ms-2" style="height:40px; width:40px;">
</div>


<p>
    <a asp-action="Create" class="btn btn-dark">Add Recipe</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Calories</th>
            <th>Healthy</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Calories</td>
                <td>@(item.IsHealthy ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


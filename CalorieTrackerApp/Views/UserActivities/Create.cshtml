@model CalorieTrackerApp.Models.UserActivity

<h2>Add Activity</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CaloriesBurned"></label>
        <input asp-for="CaloriesBurned" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="UserProfileId">User</label>
        <select asp-for="UserProfileId" asp-items="ViewBag.UserProfiles" class="form-control">
            <option value="">Select User</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
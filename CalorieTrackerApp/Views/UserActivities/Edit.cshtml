@model CalorieTrackerApp.Models.UserActivity

<h2>Edit Activity</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <select asp-for="UserProfileId"
            asp-items="ViewBag.UserProfileId"
            class="form-control">
        <option value="">Select User</option>
    </select>

    <span asp-validation-for="UserProfileId" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CaloriesBurned"></label>
        <input asp-for="CaloriesBurned" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
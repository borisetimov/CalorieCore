@model CalorieCore.DataModels.Recipe

<div class="modal-content glass-card border-danger border-opacity-50">
    <div class="modal-header border-0 pb-0">
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body text-center py-4">
        <div class="mb-3">
            <i class="bi bi-trash3-fill text-danger" style="font-size: 3rem;"></i>
        </div>
        <h3 class="text-white fw-bold mb-2">Delete Recipe?</h3>
        <p class="text-secondary mb-4">
            Are you sure you want to delete <span class="text-white fw-bold">"@Model.Title"</span>?<br>
            This action cannot be undone.
        </p>

        <form asp-action="Delete" asp-controller="Recipes" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2 justify-content-center">
                <button type="button" class="btn btn-outline-light-custom px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger px-4 fw-bold">Confirm Delete</button>
            </div>
        </form>
    </div>
</div>
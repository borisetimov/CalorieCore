@model CompleteProfileViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="glass-card p-4 p-md-5 shadow-lg border border-secondary border-opacity-25">

                <div class="text-center mb-4">
                    <div class="mb-3">
                        <span class="badge rounded-pill bg-warning text-dark px-3 py-2 text-uppercase fw-bold" style="letter-spacing: 1px;">
                            Step 2: Personalize
                        </span>
                    </div>
                    <h2 class="gradient-text fw-bold">Nearly There!</h2>
                    <p class="text-secondary small">Tell us a bit about yourself so we can tailor your experience.</p>
                </div>

                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Age" class="text-secondary small fw-bold mb-1 text-uppercase">Age</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-calendar-event"></i></span>
                                <input asp-for="Age" class="form-control bg-dark text-white border-secondary"
                                       placeholder="Years" value="@(Model.Age == 0 ? "" : Model.Age.ToString())" />
                            </div>
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Gender" class="text-secondary small fw-bold mb-1 text-uppercase">Gender</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-gender-ambiguous"></i></span>
                                <select asp-for="Gender" class="form-select bg-dark text-white border-secondary">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Weight" class="text-secondary small fw-bold mb-1 text-uppercase">Weight (kg)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-speedometer2"></i></span>
                                <input asp-for="Weight" class="form-control bg-dark text-white border-secondary"
                                       placeholder="0.0" value="@(Model.Weight == 0 ? "" : Model.Weight.ToString())" />
                            </div>
                            <span asp-validation-for="Weight" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Height" class="text-secondary small fw-bold mb-1 text-uppercase">Height (cm)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-arrows-vertical"></i></span>
                                <input asp-for="Height" class="form-control bg-dark text-white border-secondary"
                                       placeholder="0" value="@(Model.Height == 0 ? "" : Model.Height.ToString())" />
                            </div>
                            <span asp-validation-for="Height" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Goal" class="text-secondary small fw-bold mb-1 text-uppercase">Daily Calorie Goal</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-warning"><i class="bi bi-bullseye"></i></span>
                            <input asp-for="Goal" class="form-control bg-dark text-white border-secondary" placeholder="e.g. 2500" />
                        </div>
                        <span asp-validation-for="Goal" class="text-danger small"></span>
                        <div class="form-text text-secondary" style="font-size: 0.75rem;">
                            Don't worry, you can change this later in your settings.
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold shadow-sm text-dark py-3">
                            Finish Setup <i class="bi bi-check-circle-fill ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
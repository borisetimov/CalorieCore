@model CompleteProfileViewModel

<h2>Complete Your Profile</h2>

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" value="@(Model.Age == 0 ? "" : Model.Age.ToString())" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" value="@(Model.Weight == 0 ? "" : Model.Weight.ToString())" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Height" class="form-label"></label>
        <input asp-for="Height" class="form-control" value="@(Model.Height == 0 ? "" : Model.Height.ToString())" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Goal" class="form-label"></label>
        <input asp-for="Goal" class="form-control" />
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Profile</button>
</form>

@model CalorieCore.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="glass-card p-4 p-md-5 shadow-lg border border-secondary border-opacity-25">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-info bg-opacity-10 rounded-circle mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-person-plus-fill text-info fs-3"></i>
                    </div>
                    <h2 class="gradient-text fw-bold">Join the Community</h2>
                    <p class="text-secondary small">Start tracking your calories and sharing recipes today.</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger text-center small mb-4"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="text-secondary small fw-bold mb-1 text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control bg-dark text-white border-secondary" placeholder="Choose a username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="text-secondary small fw-bold mb-1 text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="text-secondary small fw-bold mb-1 text-uppercase"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" id="passwordInput" type="password" class="form-control bg-dark text-white border-secondary" placeholder="••••••••" />
                        </div>

                        <div class="progress mt-2" style="height: 6px; background-color: rgba(255,255,255,0.1);">
                            <div id="strengthBar" class="progress-bar" role="progressbar" style="width: 0%; transition: width 0.3s ease;"></div>
                        </div>
                        <div id="strengthText" class="small mt-1 fw-bold" style="font-size: 0.7rem;"></div>

                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="text-secondary small fw-bold mb-1 text-uppercase">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-shield-check"></i></span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-white border-secondary" placeholder="Re-enter password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-info text-dark w-100 fw-bold py-2 mb-3 shadow-sm">
                        Create Account
                    </button>

                    <div class="text-center">
                        <span class="text-secondary small">Already have an account?</span>
                        <a asp-action="Login" class="text-info fw-bold text-decoration-none small ms-1">Login here</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('passwordInput').addEventListener('input', function () {
            const password = this.value;
            const bar = document.getElementById('strengthBar');
            const text = document.getElementById('strengthText');
            let strength = 0;

            if (password.length >= 6) strength += 25;
            if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength += 25;
            if (password.match(/\d/)) strength += 25;
            if (password.match(/[^a-zA-Z\d]/)) strength += 25;

            bar.style.width = strength + '%';

            if (strength === 0) {
                bar.className = "progress-bar";
                text.innerHTML = "";
            } else if (strength <= 25) {
                bar.className = "progress-bar bg-danger";
                text.innerHTML = "<span class='text-danger'>Weak</span>";
            } else if (strength <= 50) {
                bar.className = "progress-bar bg-warning";
                text.innerHTML = "<span class='text-warning'>Fair</span>";
            } else if (strength <= 75) {
                bar.className = "progress-bar bg-info";
                text.innerHTML = "<span class='text-info'>Good</span>";
            } else {
                bar.className = "progress-bar bg-success";
                text.innerHTML = "<span class='text-success'>Strong</span>";
            }
        });
    </script>
}
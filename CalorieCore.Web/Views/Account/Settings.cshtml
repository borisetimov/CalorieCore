@model CalorieCore.ViewModels.SettingsViewModel

<div class="container mt-5 text-center">
    <h2>Account Settings</h2>

    <p>Username: @Model.Username</p>
    <p>Email: @Model.Email</p>

    <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure you want to delete your account?');">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-3">
            Delete Account
        </button>
    </form>
</div>

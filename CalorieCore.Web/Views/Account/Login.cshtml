@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="glass-card p-4 p-md-5 shadow-lg border border-secondary border-opacity-25">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-warning bg-opacity-10 rounded-circle mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-unlock-fill text-warning fs-3"></i>
                    </div>
                    <h2 class="gradient-text fw-bold">Welcome Back</h2>
                    <p class="text-secondary small">Enter your credentials to access your recipes.</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger text-center small mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label class="text-secondary small fw-bold mb-1 text-uppercase" style="letter-spacing: 1px;">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary">
                                <i class="bi bi-person"></i>
                            </span>
                            <input name="username" class="form-control bg-dark text-white border-secondary" placeholder="Type your username" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="text-secondary small fw-bold mb-1 text-uppercase" style="letter-spacing: 1px;">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary">
                                <i class="bi bi-key"></i>
                            </span>
                            <input type="password" name="password" class="form-control bg-dark text-white border-secondary" placeholder="••••••••" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 fw-bold py-2 mb-3 shadow-sm">
                        Sign In
                    </button>

                    <div class="text-center">
                        <span class="text-secondary small">New to CalorieCore?</span>
                        <a asp-action="Register" class="text-warning fw-bold text-decoration-none small ms-1">Create Account</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
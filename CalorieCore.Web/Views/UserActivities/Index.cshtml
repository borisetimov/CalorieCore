@model IEnumerable<CalorieCore.DataModels.UserActivity>
@{
    ViewData["Title"] = "Activities";
    int offset = ViewBag.CurrentWeekOffset ?? 0;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <h2 class="gradient-text fw-bold mb-0">Activity Tracker</h2>
            <img src="~/images/activities.png" alt="Activities" class="ms-3" style="height:40px; width:40px;">
        </div>
        <button class="btn btn-warning fw-bold" data-bs-toggle="modal" data-bs-target="#createActivityModal">
            + Log Activity
        </button>
    </div>

    <div class="week-nav glass-card mb-4">
        <a asp-action="Index" asp-route-offset="@(offset - 1)" class="btn btn-outline-light-custom btn-sm">
            <i class="bi bi-chevron-left"></i> Previous Week
        </a>

        <span class="fw-bold text-white">
            @(offset == 0 ? "Current Week" : $" {Math.Abs(offset)} Week(s) Ago")
        </span>

        @if (offset < 0)
        {
            <a asp-action="Index" asp-route-offset="@(offset + 1)" class="btn btn-outline-light-custom btn-sm">
                Next Week <i class="bi bi-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="btn btn-secondary btn-sm" disabled>Next Week</button>
        }
    </div>

    <div class="row g-2">
        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>().OrderBy(d => (int)d == 0 ? 7 : (int)d))
        {
            <div class="col-md">
                <div class="day-column">
                    <div class="day-header">@day.ToString()</div>
                    <div class="activity-list">
                        @foreach (var act in Model.Where(a => a.Date.DayOfWeek == day).OrderByDescending(a => a.Date))
                        {
                            <div class="glass-card p-2 mb-2 small">
                                <div class="fw-bold text-white">@act.Name</div>
                                <div class="text-danger">🔥 @act.CaloriesBurned kcal</div>
                                <div class="mt-2 d-flex gap-2">
                                    <button class="btn btn-sm p-0 text-secondary" onclick="openEditActModal('@act.Id', '@act.Name', '@act.CaloriesBurned')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm p-0 text-danger" onclick="openDeleteActModal('@act.Id', '@act.Name')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="createActivityModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-white">Log New Activity</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <input name="Name" class="form-control mb-3" placeholder="Activity (e.g. Running)" required />
                    <input name="CaloriesBurned" type="number" class="form-control" placeholder="Calories Burned" required />
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-warning w-100 fw-bold">Save Activity</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editActivityModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold text-white">Edit Activity</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" id="editActId" name="Id" />
                <div class="modal-body">
                    <input id="editActName" name="Name" class="form-control mb-3" required />
                    <input id="editActCalories" name="CaloriesBurned" type="number" class="form-control" required />
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-warning w-100 fw-bold">Update Activity</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteActivityModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card border-danger">
            <form asp-action="Delete" method="post">
                <input type="hidden" id="deleteActId" name="Id" />
                <div class="modal-body text-center py-4">
                    <div class="fs-1 text-danger mb-3">⚠️</div>
                    <p class="text-white">Remove activity "<strong id="deleteActName"></strong>"?</p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-outline-light-custom" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditActModal(id, name, cal) {
            document.getElementById('editActId').value = id;
            document.getElementById('editActName').value = name;
            document.getElementById('editActCalories').value = cal;
            new bootstrap.Modal(document.getElementById('editActivityModal')).show();
        }
        function openDeleteActModal(id, name) {
            document.getElementById('deleteActId').value = id;
            document.getElementById('deleteActName').innerText = name;
            new bootstrap.Modal(document.getElementById('deleteActivityModal')).show();
        }
    </script>
}
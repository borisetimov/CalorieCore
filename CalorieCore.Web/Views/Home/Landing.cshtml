@{
    ViewData["Title"] = "Welcome";
}

<div class="landing-page py-5">
    <div class="container">
        <div class="text-center mb-5 py-5">
            <h1 class="display-3 fw-bold gradient-text">Track Your Calories</h1>
            <p class="lead mt-3 text-secondary mx-auto" style="max-width: 650px;">
                The minimalist tool to log your meals, monitor daily intake, and master your fitness goals with a clean, professional dashboard.
            </p>

            <div class="mt-5 d-flex justify-content-center gap-3">
                <a asp-controller="Account" asp-action="Register" class="btn btn-warning btn-lg px-5">
                    Get Started
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light-custom btn-lg px-5">
                    Login
                </a>
            </div>
        </div>

        <div class="row g-4 text-center mb-5">
            <div class="col-md-3">
                <div class="card h-100 glass-card border-0">
                    <div class="card-body py-4">
                        <div class="fs-1 mb-3">🍎</div>
                        <h5 class="card-title fw-bold">Log Food</h5>
                        <p class="card-text text-secondary small">Add meals effortlessly and track precise nutritional values.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 glass-card border-0">
                    <div class="card-body py-4">
                        <div class="fs-1 mb-3">📊</div>
                        <h5 class="card-title fw-bold">Daily Totals</h5>
                        <p class="card-text text-secondary small">Real-time calculation of your daily energy balance and progress.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 glass-card border-0">
                    <div class="card-body py-4">
                        <div class="fs-1 mb-3">📅</div>
                        <h5 class="card-title fw-bold">Progress</h5>
                        <p class="card-text text-secondary small">Visual history of your nutrition journey and habit patterns.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 glass-card border-0">
                    <div class="card-body py-4">
                        <div class="fs-1 mb-3">🔐</div>
                        <h5 class="card-title fw-bold">Secure</h5>
                        <p class="card-text text-secondary small">Your health data is strictly private and stored securely.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center my-5 py-5">
            <div class="col-md-7">
                <div class="card glass-card p-5 border-0">
                    <h2 class="text-center mb-4 fw-bold">How it works</h2>
                    <div class="list-group list-group-flush bg-transparent">
                        <div class="list-group-item list-group-item-dark-custom d-flex align-items-center px-4 py-3">
                            <span class="badge bg-warning text-dark me-3 rounded-circle" style="width:28px; height:28px; line-height:20px;">1</span>
                            <span>Create a free personal account</span>
                        </div>
                        <div class="list-group-item list-group-item-dark-custom d-flex align-items-center px-4 py-3">
                            <span class="badge bg-warning text-dark me-3 rounded-circle" style="width:28px; height:28px; line-height:20px;">2</span>
                            <span>Log the foods you eat and your activities</span>
                        </div>
                        <div class="list-group-item list-group-item-dark-custom d-flex align-items-center px-4 py-3">
                            <span class="badge bg-warning text-dark me-3 rounded-circle" style="width:28px; height:28px; line-height:20px;">3</span>
                            <span>Track your daily intake and reach your goals</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mb-5 py-4">
            <h3 class="mb-4 fw-bold">Ready to start tracking?</h3>
            <a asp-controller="Account" asp-action="Register" class="btn btn-warning btn-lg px-5">
                Register Now
            </a>
        </div>
    </div>
</div>